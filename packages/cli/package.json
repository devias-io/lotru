{
  "name": "lotru",
  "version": "0.0.1-alpha.4",
  "description": "Add components to your apps.",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "Devias",
    "url": "https://lotru-ui.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devias/lotru.git",
    "directory": "packages/cli"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "ui",
    "blocks",
    "base_ui",
    "pigmentcss",
    "lotru"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "exec:dev": "cross-env REGISTRY_URL=http://localhost:3000/registry/alpha/default node dist/index.js",
    "exec:prod": "cross-env REGISTRY_URL=http://lotru-ui.com/registry/alpha/default node dist/index.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "release": "changeset version",
    "pub:alpha": "pnpm build && pnpm publish --no-git-checks --access public --tag alpha",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm build && pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm build && pnpm publish --access public"
  },
  "dependencies": {
    "@antfu/ni": "0.23.1",
    "commander": "12.1.0",
    "deepmerge": "4.3.1",
    "execa": "9.5.2",
    "fast-glob": "3.3.2",
    "fs-extra": "11.2.0",
    "https-proxy-agent": "7.0.6",
    "kleur": "4.1.5",
    "lucide-react": "0.468.0",
    "node-fetch": "3.3.2",
    "ora": "8.1.1",
    "prompts": "2.4.2",
    "stringify-object": "5.0.0",
    "ts-morph": "24.0.0",
    "tsconfig-paths": "4.2.0",
    "type-fest": "4.30.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.10.2",
    "@types/prompts": "2.4.9",
    "@types/stringify-object": "4.0.5",
    "cross-env": "7.0.3",
    "tsup": "8.3.5",
    "typescript": "5.7.2"
  }
}